#:kivy 1.10.1

<WidgetContainer>:
    slide_x: SlideX
    slide_y: SlideY
    slide_z: SlideZ
    cols: 1

	BoxLayout:
		size_hint: None,None
		size: root.width,root.height/10
    	Slider:
        	id: SlideX
        	max: 100
        	min: -100
        	value: 0
        	text: 'X'
        	on_value: myValueX.text = str(self.value)
			size_hint_y: None
			height: root.height/10
    	TextInput:
        	id: myValueX
			size_hint_y: None
			height: root.height/10
        	text: '0'
			multiline: False
			background_color: [.1,.1,.1,1]
			foreground_color: [1,1,1,1]
			on_text_validate: SlideX.value = app.checkInput(self.text)
		
	BoxLayout:    
    	Slider:
        	id: SlideY
        	max: 100
        	min: -100
        	value: 0
        	orientation: 'vertical'
        	on_value: myLabelY.text = "Y: " + str(self.value)
    	Label:
        	id: myLabelY
        	text: 'Y: '
    
    	Slider:
        	id: SlideZ
        	max: 100
        	min: -100
        	value: 0
        	orientation: 'vertical'
        	on_value: myLabelZ.text = "Z: " + str(self.value)
    	Label:
        	id: myLabelZ
        	text: 'Z: '