<launch>

  <arg name="device_id" default="0" />

  <!-- Start the for cam 1 -->
  <node pkg="cv_camera" type="cv_camera_node" name="camera_1" />

  <node pkg="spear_rover" type="ball_detector_node" name="ball_detector_node">
    <param name="image_topic" value="/camera_1/image_raw" />
  </node>

  <node pkg="spear_rover" type="ball_drawer_node" name="ball_drawer_node" />

</launch>
