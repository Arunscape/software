#:kivy 1.10.1
<DriveScreen>:
    BoxLayout:
        size: root.size
        orientation: 'vertical'
        padding: 70
        id: background
        canvas.before:
            Color:
                rgb: (0.7, 0.7, 0.7)
            Rectangle:
                pos: self.pos
                size: (self.width, self.height)

        BoxLayout:
            orientation: 'horizontal'
            padding: 20
            spacing: 100
            size_hint: 1, 0.8

            DriveStick:
                id: l_stick
                power: 0

            DriveStick:
                id: r_stick
                power: 0

        BoxLayout:
            orientation: 'horizontal'
            padding: 20
            spacing: 50
            size_hint: 1, 0.2
            id: labels

            Label:
                font_size: 70  
                markup: True
                id: l_label
                canvas.before:
                    Color:
                        rgb: (1, 1, 1)
                    Rectangle:
                        pos: self.pos
                        size: (self.width, self.height)
                    Color:
                        rgb: (0, 0, 0)
                    Line:
                        width: 10
                        rectangle: self.x+1,self.y+1,self.width-1,self.height-1
                text: "[color=222222]Left: 0[/color]"

            Label:
                font_size: 70  
                markup: True
                id: r_label
                canvas.before:
                    Color:
                        rgb: (1, 1, 1)
                    Rectangle:
                        pos: self.pos
                        size: (self.width, self.height)
                    Color:
                        rgb: (0, 0, 0)
                    Line:
                        width: 10
                        rectangle: self.x+1,self.y+1,self.width-1,self.height-1
                text: "[color=222222]Right: 0[/color]"

<DriveStick>:
    canvas:
        Color:
            rgb: (1, 1, 1)
        Rectangle:
            pos: self.pos
            size: (self.width, self.height)
        Color:
            rgb: (0, 0, 0)
        Line:
            rectangle: self.x, self.y+self.height/2, self.width, 0
        Line:
            width: 10
            rectangle: self.x+1,self.y+1,self.width-1,self.height-1

    Widget: 
        id: nub
        size: (self.width, self.height)
        width: self.parent.width
        height: self.parent.width / 4
        pos: self.parent.pos
        canvas:
            Color:
                rgb: (0, 0, 0)
            Rectangle:
                pos: self.pos
                size: (self.width, self.height)
            
